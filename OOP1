class A:

  def __init__(self, fullname, marks):
    self.fullname = fullname
    self.marks = marks
    print("Constructor is called")

  def welcome(self):
    print("Welcome student:", self.fullname)


a = A("Sohom", 95)
print(a.fullname, a.marks)
a.welcome()

b = A("Jiniya", 87)
print(b.fullname, b.marks)
b.welcome()

# static methods
class Student:

  def __init__(self, name, marks):
    self.name = name
    self.marks = marks

  @staticmethod
  def hello():
    print("hello")

  def avg(self):
    sum = 0
    for i in self.marks:
      sum += i

    print("hi", self.name, "avg is:", sum / 3)


a = Student("Sohom", [98, 90, 94])
a.avg()
a.hello()


# class methods
class C:
  name = "anonymous"

  @classmethod  
  def changeName(cls , name):
    cls.name = name

p1 = C()
p1.changeName("Sohom")
print(p1.name)

# Bank account problem


class Bank:

  def __init__(self, name, balance, account_No):
    self.name = name
    self.balance = balance
    self.account_No = account_No

  def debit(self, amount):
    self.balance -= amount
    print("Your amount of rupees ", amount, "has been debited")
    print("Current balance", self.balance)

  def credit(self, amount):
    self.balance += amount
    print("Your amount of rupees ", amount, "has been credited")
    print("Current balance", self.balance)


a = Bank("Sohom", 10000, 12345)
a.debit(1000)
